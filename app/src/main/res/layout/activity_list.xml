<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity">

    <TextView
        android:id="@+id/txTodosProdutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="TODOS OS PRODUTOS"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txQtdeItens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txTodosProdutos"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:text="11 itens" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcyViewItens"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txQtdeItens" />

</RelativeLayout>
