<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txTituloProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Teste de NOME - Teste CD"
            android:textSize="25dp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardImgProduto"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_below="@id/txTituloProduto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="25dp">

            <ImageView
                android:id="@+id/imgProduto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/albumcover_melodrama"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txCodProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txTituloProduto"
            android:layout_marginLeft="60dp"
            android:textSize="5dp"
            android:text="COD: " />

        <TextView
            android:id="@+id/txPrecoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardImgProduto"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:text="R$ 49,99"
            android:textSize="45dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btnComprar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="#314dfd"
            android:layout_below="@id/txPrecoProduto"
            android:layout_centerHorizontal="true"
            android:text="COMPRAR AGORA"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            app:cornerRadius="25dp"
            android:textColor="@color/white"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardCaracteristicas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnComprar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleCardCaract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="CARACTERÍSTICAS DO PRODUTO"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txCaracteristicas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec dignissim urna id augue volutpat pretium. Vestibulum commodo mauris et finibus varius. Donec vel volutpat ligula." />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTracklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardCaracteristicas"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTracklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="TRACKLIST"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txTracklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="1 - Sed et Volutpat Quam\n2 - Donec a Mauris\n3 - Donec\n4 - Etiam\n5 -Duis Faucibus\n6 -Et Turpis" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>