<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFotoProduto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/caprisongs_albumcover"
                android:contentDescription="Foto do produto anunciado" />

            <LinearLayout
                android:id="@+id/infoProduto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txProduto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOME DO PRODUTO"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txDescricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descrição de até duas linhas ou alguns caracteres a mais blá blá blá"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 19,99"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>